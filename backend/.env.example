# 服务器配置
NODE_ENV=development
PORT=5000
HOST=localhost

# 数据库配置
DB_USER=sa
DB_PASSWORD=your_password
DB_SERVER=your_server
DB_DATABASE=HealthRecordSystem
DB_ENCRYPT=true
DB_TRUST_CERTIFICATE=true

# 第三方体检API配置
EXAMINATION_API_HOST=localhost
EXAMINATION_API_PORT=3000
EXAMINATION_API_BASE_URL=http://localhost:3000/api

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# 前端URL配置
FRONTEND_HOST=localhost
FRONTEND_PORT=8080
FRONTEND_URL=http://localhost:8080

# DeepSeek API配置
# 获取API Key: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# PDF转换API配置
# 方式1: 使用完整URL配置 (推荐)
PDF_CONVERT_URL=http://localhost:4000/convert

# 方式2: 分别配置IP和端口
# PDF_HOST=localhost
# PDF_PORT=4000

# PDF转换超时时间 (毫秒)
PDF_CONVERT_TIMEOUT=30000

# PDF服务配置说明:
# - PDF_CONVERT_URL: PDF转换服务的完整URL，包含协议、主机、端口和端点
# - PDF_HOST: PDF转换服务的主机名或IP地址 (当不使用PDF_CONVERT_URL时生效)
# - PDF_PORT: PDF转换服务的端口号 (当不使用PDF_CONVERT_URL时生效)
# - PDF_CONVERT_TIMEOUT: PDF转换请求的超时时间，单位为毫秒